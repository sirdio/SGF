    <div class="pedido">
        <div class="pedidodetalle">
           <table>
                    <tr>
                        <th>Remitente</th>
                        <th>Asunto</th>                        
                        <th>Fecha</th>
                        <th>Estado</th>
                        <th>Acci√≥n</th>
                    </tr>
                    {% for MsjInt in msjint %}
                    <tr>
                        <td>{{MsjInt.nombreremitente}}</td>
                        <td>{{MsjInt.asunto}}</td>
                        <td>{{MsjInt.fechaenvio}}</td>
