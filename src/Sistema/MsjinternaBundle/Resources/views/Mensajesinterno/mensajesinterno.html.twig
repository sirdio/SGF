                        {%if app.user.tipou == 'Empleado'%}
                            <td><a href ="{{path('msjinterna_abrirmsjemp',{'id':MsjInt.id})}}">Abrir mensaje</a></td>                                                 
                        {%else%}
                            <td><a href ="{{path('msjinterna_abrirmsjadmin',{'id':MsjInt.id})}}">Abrir mensaje</a></td>                                                 
