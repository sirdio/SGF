{% extends '::basecuerpo1CG.html.twig' %}
{% block title %}Modificar tipos de usuarios{% endblock %}
{% block navigation %}      
    <nav>
        <ul class="navigation">
            <li><a href="{{ path ('rol_new')}}">Agregar</a></li>    
            <li><a href="{{ path ('rol')}}">Inicio</a></li>
        </ul>
    </nav>
{% endblock %}
{% block id 'portada' %}

{% block article -%}
    <h1>Modificar Tipo de Usuario</h1>
    <form action="{{ path('rol_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_errors(edit_form) }}
        <div><H3>
        {{form_label(edit_form.name, 'Nombre')}}
        {{form_errors(edit_form.name)}}  
        {{form_widget(edit_form.name)}}
        </H3></div>    
        <div><H3>
        {{form_label(edit_form.tipus, 'Tipo Usuario')}}
        {{form_errors(edit_form.tipus)}}  
        {{form_widget(edit_form.tipus)}}
        </H3></div>   
        <div><H3>
        {{form_label(edit_form.estado, 'Estado')}}
        {{form_errors(edit_form.estado)}}  
        {{form_widget(edit_form.estado)}}
        </H3></div>         
        
        {{form_rest(edit_form)}}
        <p>
            <button type="submit">Modificar</button>
        </p>
    </form>
{% endblock %}
