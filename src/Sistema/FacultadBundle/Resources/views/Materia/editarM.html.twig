{% extends '::basecuerpo1CG.html.twig' %}
{% block title %}Modificar Materia{% endblock %}
{% block navigation %}        
    <nav>
        <ul class="navigation">
            <li><a href="{{ path('M_inicio') }}">Volver</a></li>
        </ul>
    </nav>
{% endblock %}
{% block maincol %}
        <form action="{{ path('M_guardar',{'Mat_Codigo': materia.MatCodigo}) }}" 
              method="post" {{ form_enctype(edit_form) }} class="contact_form">
            <H2>Modificar Materia</H2>
            <input type="hidden" name="_method" value="PUT" />                           
            {{ form_errors(edit_form) }}
            <div class="filae1">
                <div class="Celle1">
                {{form_label(edit_form.Mat_Codigo, 'Codigo')}}
                {{form_errors(edit_form.Mat_Codigo)}}  
                {{form_widget(edit_form.Mat_Codigo)}}
                </div>
                <div class="Celle2">
                {{form_label(edit_form.Mat_Nombre, 'Nombre de Materia')}}
                {{form_errors(edit_form.Mat_Nombre)}}
                {{form_widget(edit_form.Mat_Nombre)}}
                </div>
            </div>            
            {{form_rest(edit_form)}}
            <div class="filaeEsp7">
                <div class="Celle2">
                    <button type="submit">Guardar</button>
                </div>
            </div>             
        </form>
{% endblock %}

 