       <div  class="contentab">                      
        <div class="paginacion">
             <ul>
                {%for i in 1.. totalPaginas %}
                    {%if loop.first %}
                        <li {%if page==1%} class="disabled" {%endif%}>
                            <a href="{{path('M_listar')}}?page={{page-1}}" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a>
                        </li>
                    {%endif%}
                        
                        <li {% if page==loop.index %}  class="active" {%endif%}>
                            <a href="{{path('M_listar')}}?page={{loop.index}}">{{loop.index}}</a>
                        </li>
                        
                    {%if loop.last %}                                                   
                        <li {%if page==totalPaginas%} class="disabled" {%endif%}>
                            <a href="{{path('M_listar')}}?page={{page+1}}" aria-label="Next"><span aria-hidden="true">&raquo;</span></a>
                        </li>
                    {%endif%}
                {%endfor%}
             </ul>
        </div>        
    </div>
{% endblock %}
    

