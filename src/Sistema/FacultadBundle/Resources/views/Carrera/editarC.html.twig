{% extends '::basecuerpo1CG.html.twig' %}
{% block title %}Modificar Carrera{% endblock %}
{% block navigation %}        
    <nav>
        <ul class="navigation">
            <li><a href="{{ path('C_inicio') }}">Volver</a></li>
        </ul>
    </nav>
{% endblock %}
{% block maincol %}
        <form action="{{ path('C_guardar',{'Carr_Codigo': carrera.CarrCodigo}) }}" 
              method="post" {{ form_enctype(edit_form) }} class="contact_form">
            <input type="hidden" name="_method" value="PUT" />    
                <H2>Modificar Carrera</H2>
                {{ form_errors(edit_form) }}
            <div class="filae1">
                <div class="Celle1">
                    {{form_label(edit_form.Carr_Codigo, 'Codigo')}}
                    {{form_errors(edit_form.Carr_Codigo)}}  
                    {{form_widget(edit_form.Carr_Codigo)}}
                </div>
                <div class="Celle2">
                    {{form_label(edit_form.Carr_Nombre, 'Nombre de Carrera')}}
                    {{form_errors(edit_form.Carr_Nombre)}}
                    {{form_widget(edit_form.Carr_Nombre)}}
                </div>
            </div>
            <div class="filae2">
                <div class="Celle1">
                    {{form_label(edit_form.Facultad, 'Facultad')}}
                    {{form_errors(edit_form.Facultad)}}
                    {{form_widget(edit_form.Facultad)}}
                    <div class="msjerror1"><span id="msjtu"></span></div>
                </div>  
                <div class="Celle2">                
                    {{form_label(edit_form.CarreraMaterias, 'Materias')}}
                    {{form_errors(edit_form.CarreraMaterias)}}
                    {{form_widget(edit_form.CarreraMaterias)}}
                    <div class="msjerror1"><span id="msjmc"></span></div>    
                </div>
               {{form_rest(edit_form)}}                       
            </div>        
            <div class="filaeEsp7">
                <div class="Celle2">
                    <button type="submit">Guardar</button>
                </div>
            </div>                                                      
        </form>
{% endblock %}

{% block javascripts %} 
<script>
$(document).ready(function(){    
    $( "form" ).submit(function( event ) {

        tipoUs = $("#Sistema_facultadbundle_carreratype_Facultad").val();
        if(tipoUs == 0){
            $( "#msjtu" ).text( "Debe seleccionar una facultad.!!" ).show().fadeOut( 7000);
            event.preventDefault();  
        }
        tipomc = $("#Sistema_facultadbundle_carreratype_CarreraMaterias").val();       
        if(tipomc == 0){
            $( "#msjmc" ).text( "Debe seleccionar por lo menos 1 Materia.!!" ).show().fadeOut( 7000);
            event.preventDefault();  
        }        
    });           
});
    
</script>
{% endblock%}